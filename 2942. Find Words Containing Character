class Solution {
    public List<Integer> findWordsContaining(String[] words, char x) {
        List<Integer> list = new ArrayList<Integer>();
        for(int i=0;i<words.length;i++){
            String str = words[i];
            if(str.indexOf(x) > -1){
                list.add(i);
            }
        }
        return list;
    }
}
