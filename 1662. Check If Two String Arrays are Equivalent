class Solution {
    public boolean arrayStringsAreEqual(String[] word1, String[] word2) {
        StringBuilder finalStr1 = new StringBuilder();
        StringBuilder finalStr2 = new StringBuilder();
        for(int i=0;i<word1.length; i++){
           // String str1=word1[i];
           // for(int m=0;m<str1.length();m++){
             //   finalStr1.append(str1.charAt(m));
            //}
            finalStr1.append(word1[i]);
        }
        for(int j=0;j<word2.length; j++){
           // String str2=word2[j];
            //for(int n=0;n<str2.length();n++){
              //  finalStr2.append(str2.charAt(n));
            //}
            finalStr2.append(word2[j]);
        }

        return finalStr1.toString().equals(finalStr2.toString())?true:false;
    }
}
